generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "sqlserver"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Document {
  id           String   @id @default(uuid())
  title        String
  date         DateTime
  description  String
  downloadLink String
  documentType String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
